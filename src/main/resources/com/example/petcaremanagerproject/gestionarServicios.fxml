<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="10.0" stylesheets="@css/general.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.petcaremanagerproject.Controladores.GestionarServiciosControlador">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestión de Servicios" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#volverOnAction" text="Volver" />
    </HBox>

    <HBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="txtBuscar" promptText="Buscar servicio..." HBox.hgrow="ALWAYS" />
        <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#buscarServicioOnAction" text="Buscar" />
    </HBox>

    <TableView fx:id="tablaServicios" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCategoria" prefWidth="100.0" text="Categoría" />
            <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
            <TableColumn fx:id="colObservaciones" prefWidth="150.0" text="Observaciones" />
            <TableColumn fx:id="colMascota" prefWidth="75.0" text="Mascota" />
            <TableColumn fx:id="colCuidador" prefWidth="75.0" text="Cuidador" />
            <TableColumn fx:id="colDueno" prefWidth="75.0" text="Dueño" />
            <TableColumn fx:id="colFechaSolicitud" prefWidth="120.0" text="Fecha Solicitud" />
            <TableColumn fx:id="colFechaProgramada" prefWidth="120.0" text="Fecha Programada" />
            <TableColumn fx:id="colFechaRealizacion" prefWidth="120.0" text="Fecha Realización" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="btnAnadir" mnemonicParsing="false" onAction="#anadirServicioOnAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Nuevo Servicio" />
        <Button fx:id="btnModificar" mnemonicParsing="false" onAction="#modificarServicioOnAction" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Modificar" />
        <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eliminarServicioOnAction" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Eliminar" />
    </HBox>
</VBox>
