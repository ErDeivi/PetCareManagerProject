<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.example.petcaremanagerproject.Controladores.CrearDuenoControlador"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="Nuevo Dueño" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <GridPane vgap="10" hgap="10">
        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Apellidos:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtApellidos" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Correo:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtCorreo" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="txtTelefono" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="txtDireccion" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnGuardar" text="Guardar" onAction="#guardarOnAction"/>
        <Button fx:id="btnCancelar" text="Cancelar" onAction="#cancelarOnAction"/>
    </HBox>
</VBox> 